<%- include('header') -%>

<div class="ui main text container segment">
  <div class="ui huge header">Edit the Blog</div>

  <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="post">
    <div class="field">
      <label>Title</label>
      <input type="text" name="title" value="<%=blog.title%>">
    </div>
    <div class="field">
      <label>Image</label>
        <input type="text" name="image" value="<%=blog.image%>">
    </div>
    <div class="field">
      <label>Body</label>
      <button>erutugul</button>
      <textarea name="body" rows="8" cols="80"><%=blog.body%></textarea>
    </div>
    <input class="ui violet basic big button" type="submit" name="" value="submit">
  </form>

</div>

<%- include('footer') -%>
